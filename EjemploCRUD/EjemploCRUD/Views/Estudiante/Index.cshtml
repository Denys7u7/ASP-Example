
@{
    ViewBag.Title = "CRUD Estudiantes";
}

<h2>CRUD Estudiantes</h2>
<a class="btn btn-primary" href="/Estudiante/insertarEstudiante">Agregar estudiante</a><br><br>
<table class="text-center table table-striped table-hover table-bordered">
    <tr>
        <th class="text-center">Carnet</th>
        <th class="text-center">Nombre</th>
        <th class="text-center">Apellido</th>
        <th class="text-center">Sexo</th>
        <th class="text-center">Edad</th>
        <th class="text-center">Acciones</th>
    </tr>
    @{
        foreach (System.Data.DataRow dr in ViewBag.emp.Rows)
        {
            <tr>
                <td>@dr["carnet"]</td>
                <td>@dr["nombre"]</td>
                <td>@dr["apellido"]</td>
                <td>@dr["sexo"]</td>
                <td>@dr["edad"]</td>
                <td><a class="btn btn-success" href="/Estudiante/modificarEstudiante?id=@dr["id"]">Editar</a>
                    <a class="btn btn-danger" href="/Estudiante/eliminarEstudiante?id=@dr["id"]">Borrar</a></td>
                
            </tr>
        }
    }
</table>

